
  <li class="question_name"> Question:</li>
  <li class="question_name"><img src="<%= Faker::Avatar.image %>" height="42" width="42"></li>
  <%= link_to 'Delete', @question, method: :delete %>

  <table class="info_table">
    <tr>
      <th>User:</th>
      <td> <%= @question.asker_name %></td>
    </tr>
    <tr>
      <th>Question: </th>
      <td><%= @question.title %></td>
    </tr>
    <tr>
      <th>Description:</th>
      <td><%= @question.body %></td>
    </tr>
  </table>
  <a href="/questions/<%= @question.id %>/answers/new">Add a Answer</a><br>
  <br>


  <% @answers.each do |answer|%>

  <table>
      <tr>
        <th><img src="<%= Faker::Avatar.image %>" alt="<%=Faker::Company.buzzword%>" height="24" width="24"></th>
      <%= link_to 'Delete', 'questions/answers/' + answer.to_param, method: :delete %>

      </tr>

      <tr>
        <th> Name: </th>
        <td><%= answer.name %> </td>
      </tr>
      <tr>
        <th >Body:</th>
        <td ><%= answer.body %></td>
      </tr>
  </table>

  <% end %>

  <script src="js/vendor/modernizr-2.6.2.min.js"></script>
  <%= form_for([@question, @question.answers.build]) do |f| %>

    <div class="large-4 columns">
      <%= "Name" %>
      <%= f.text_field :name %>
    </div>

    <div class="large-12 columns" class="mdhtmlform-md">
      <%= "Your Answer" %>
      <%= f.text_area :body, class: 'mdhtmlform-md', value: '#Answer Here' %>
      <%= f.submit %>
      <br /><br />
      <!-- Display converted html here! -->
      Markdown:
      <div class="mdhtmlform-html"></div>
      <!-- And insert converted html for submission here... -->
      <textarea class="mdhtmlform-html" style="display: none;"></textarea>
      <br /><br />
    </div>

  <% end %>


