<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :asker_name, :required => true %>
  </div>

  <div class="field">
    <%= f.label "Question" %><br>
    <%= f.text_field :title, :required => true %>
  </div>

  <div class="field">
    <%= f.label "description" %><br>
    <%= f.text_field :body, :required => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
