
<%= form_for :question, url:{action: "update"} do |f| %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field :asker_name%>
  </p>

  <p>
   <%= f.label "Question" %><br>
   <%= f.text_field :title %>
  <p>

  <p>
    <%= f.label "description" %><br>
    <%= f.text_area :body%>
  <p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
